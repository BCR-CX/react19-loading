{
  "name": "react-loading",
  "version": "3.0.0",
  "description": "React loading component",
  "main": "dist/react-loading.es.js",
  "files": [
    "dist"
  ],
   "exports": {
    ".": "./dist/react-loading.es.js"
   },
  "scripts": {
    "prepush": "yarn test",
    "build": "vite build",
    "prepublish": "npm ci",
    "start": "vite",
    "test": "vitest",
    "lint": "eslint ./lib/**.jsx --color",
    "travis": "npm run build && npm test && npm run coveralls",
    "local": "vite -c vite.local.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BCR-CX/react19-loading"
  },
  "keywords": [
    "loading",
    "react",
    "react-component"
  ],
  "author": {
    "name": "BCRCX",
    "email": "devgroup@bcrcx.com",
    "url": "https://bcrcx.com/"
  },
  "license": "MIT",
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react":  "1.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "node-libs-browser": "^2.0.0",
    "np": "^10.2.0",
    "prop-types": "^15.5.8",
    "raf": "^3.4.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "vite": "^6.3.4",
    "vitest": "^3.0.9"
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.svg$": "identity-obj-proxy"
    },
    "verbose": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/lib/svg/",
      "<rootDir>/node_modules/"
    ]
  }
}
